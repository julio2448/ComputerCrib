<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add an offer</h3>
        <%= simple_form_for [@offer, @booking] do |f| %>
          <%= f.input :start_date, placeholder: 'Enter starting date' %>
          <%= f.input :end_date, placeholder: 'Enter ending date' %>
          <div class="d-flex justify-content-between align-items-center">
            <%= f.submit class: "btn btn-deep-orange custom-button" %>
            <%= link_to "Cancel", :back, class: "btn btn-deep-orange custom-button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
