<div class="container">
  <h1>Rental details</h1>

  <div class="card mt-4">
    <div class="card-body">
      <p><strong>Owner:</strong> <%= @booking.id %></p>
      <p><strong>Start Date:</strong> <%= @booking.start_date %></p>
      <p><strong>End Date:</strong> <%= @booking.end_date %></p>
      <h2><strong>TOTAL PRICE:</strong> <%= @booking.total_price %> MXN</h2>
      <h2><%= link_to "Delete Booking?", booking_path(@booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %></h2>
    </div>
  </div>
  <hr>
  <h3 style="font-size: 1.5em; font-weight: bold; text-align: center; margin-top: 20px; color: #333;">THANK YOU FOR YOUR TIME, WE ARE WAITING FOR <strong><%= @booking.offer.user.email %></strong> APPROVAL</h3>

</div>
