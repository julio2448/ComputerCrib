<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Log in</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form"}) do |f| %>
            <div class="form-group">
              <%= f.input :email, label: false, placeholder: "Email", required: false, autofocus: true, input_html: { autocomplete: "email", class: "form-control", style: "width: 100%;" } %>
            </div>
            <div class="form-group">
              <%= f.input :password, label: false, placeholder: "Password", required: false, input_html: { autocomplete: "current-password", class: "form-control", style: "width: 100%;" } %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group form-check">
                <%= f.input :remember_me, as: :boolean, label: "Remember me", input_html: { class: "form-check-input" } %>
              </div>
            <% end %>
            <div class="form-group">
              <%= f.button :submit, "Log in", class: "btn btn-deep-orange custom-button" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
