<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron">
        <h1>Welcome to ComputerCrib!</h1>
        <p class="lead">Find the perfect computer for you.</p>
        <hr class="my-4">
        <form class="form-inline">
          <div class="form-group mr-2">
            <label for="location">Location</label>
            <input type="text" class="form-control ml-2" id="location" placeholder="Enter location">
          </div>
          <div class="form-group mr-2">
            <label for="checkin">From:</label>
            <input type="date" class="form-control ml-2" id="checkin">
          </div>
          <div class="form-group mr-2">
            <label for="checkout">To:</label>
            <input type="date" class="form-control ml-2" id="checkout">
          </div>
          <%= link_to "Check offers", offers_path , class: "btn btn-deep-orange custom-button" %>
        </form>
      </div>
    </div>
  </div>
</div>
